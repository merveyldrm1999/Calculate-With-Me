<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E28F244E"
    tools:context=".MainActivityOyun">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="329dp"
        android:layout_height="18dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="Bu uygulama Merve Yıldırım yapımıdır."
        android:textColor="#E1B5B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonTahmin"
        android:layout_width="188dp"
        android:layout_height="66dp"
        android:layout_marginTop="50dp"
        android:background="#FFE1B5B5"
        android:text="Bildim mi ?"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTahminSayi" />

    <EditText
        android:id="@+id/editTextTahminSayi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="246dp"
        android:layout_height="81dp"
        android:layout_marginTop="196dp"
        android:gravity="center"
        android:text="1 ile 100 arasında bir sayı tahmin et !"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRastgele"
        android:layout_width="250dp"
        android:layout_height="94dp"
        android:layout_marginBottom="50dp"
        android:background="#E1B5B5"
        android:text="Buraya bas ve aklımdan bir sayı tutayım !"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>